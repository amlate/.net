    <script type="text/javascript">
        $(function () {
           // var ProductCart = new Array();
          //  var hasActivity = 0;
           // hasActivity = 1; var CartPrice = 0;
            //var ProductJson = putAjaxData(ProductCart);

               // Main.init_page();


                $('#yzm').click(function () {
                    var phone = $('#login_tel').val();
                    if (phone == '')
                    {
                        Msg('请输入新手机号！',2);
                        return;

                    }
                    if (!checkTel(phone))
                    {
                        Msg('手机号格式错误！', 2);
                        return
                    }


                    // yzm(phone);
                    settime();
                })

                $('#submit').click(function () {
                    //var question = confirm("确定要申请提现吗？")

                    ////不等于0其实就是不等于FALSE
                    //if (question != "0") {
                        Next();
                    //}

                })
        });

        //确定
        function Next() {
            //获取验证码后返回的隐藏列
            var oldCode = $('#code').val();
            //当前手机号和输入验证码
            var newCode = $('#login_tel').val() + $('#login_code').val();
            
            //如果相同则跳到新页面
            if (oldCode == newCode) {
                alert('成功匹配！');
                var url = "/FrontPage/ReplacePhone?OldPhone=" + $('#oldPhone').val() + "&NewPhone=" + $('#login_tel').val();
                //AJAX请求验证码
                ajaxLocal(url, null, function (data) {

                    if (data.state == '0')//成功
                    {
                       // alert(data.code);
                        //将手机号和验证码组合在一起进行判断，防止修改手机号错误问题
                       // Msg(data.message, 1);
                      window.location.href = "/FrontPage/UserInfo/";
                    }
                    else if (data.state == '-1')//失败
                    {
                        Msg(data.message, 3);

                    }
                    else {
                        Msg(data.message, 3);
                    }

                });
                return;
            }
            else {
                Msg('请仔细检查手机号和验证码是否正确！', 2);

                return;
            }


        }

        //获取验证码方法
        function yzm(phone) {

            var url = "/FrontPage/GetCode?mobile=" + phone + "&token=baiximo@123456";
            //AJAX请求验证码
            ajaxLocal(url, null, function (data)
            {
                if (data.state == '0')//成功
                {
                    alert(data.code);
                    //将手机号和验证码组合在一起进行判断，防止修改手机号错误问题
                    $('#code').val(data.mobile + data.code);
                }
                else if (data.state == '-2')//成功
                    {
                    Msg('认证失败！', 3);

                } else {
                    Msg('验证码获取失败，请重新获取！', 3);

                }


            })

            return;

        }


        /*-------------------------------------------------------------*/
        //点击验证码的方法
        var countdown = 60;

        function settime() {
            if (countdown == 59) {
                var phone=$('#login_tel').val();
                //发送验证码的主代码
                yzm(phone);
            }
            if (countdown == 0) {
                $('#yzm').html('获取验证码');
                //点击后，过了60秒之后，恢复成获取验证码
                //$('#yzm').removeAttribute("disabled")
                //$('#yzm').style.Enable = false;
                //$('#yzm').style.backgroundColor = "#44aaff";
                //obj.value = "获取验证码";
                // $("#yzm").bind()

                //重新绑定事件
                $('#yzm').click(function () {
                    var phone = $('#login_tel').val();
                    if (phone == '') {
                        Msg('请输入新手机号！', 2);
                        return;

                    }
                    if (!checkTel(phone)) {
                        Msg('手机号格式错误！', 2);
                        return
                    }

                    // yzm(phone);
                    settime();
                })
                countdown = 60;
                return;
            } else {
                $('#yzm').html("重新发送(" + countdown + ")");
                //跳帧 0--->60
                //$('#yzm').style.Enable = true;
               // $('#yzm').setAttribute("disabled", true);
               // $('#yzm').style.backgroundColor = "#ccc";
                //obj.value = "重新发送(" + countdown + ")";

                $("#yzm").unbind()

                countdown--;
            }
            setTimeout(function () {
                settime()
            }, 1000)
        }
        /*-------------------------------------------------------------*/
    </script>

</body>

