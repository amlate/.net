@model AiJiaXi.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "修改密码";
    ViewBag.Top = "修改密码";
    ViewBag.Second = "修改密码";
}

<div class="container">
    @using (Html.BeginForm("ChangePassword", "Purview", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-group"></div>

        <div class="form-group">
            <div class="col-md-offset-2">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new {@class = "col-md-2 control-label"})
            <div class="col-sm-4">
                @Html.PasswordFor(model => model.OldPassword, new {@class = "form-control", placeholder = "请输入当前密码"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new {@class = "col-md-2 control-label"})
            <div class="col-sm-4">
                @Html.PasswordFor(model => model.NewPassword, new {@class = "form-control", placeholder = "请输入新密码"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-2 control-label"})
            <div class="col-sm-4">
                @Html.PasswordFor(model => model.ConfirmPassword, new {@class = "form-control", placeholder = "请确认密码"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">更改密码</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}