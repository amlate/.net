@model AiJiaXi.Domain.Entities.Configs.EmailConfig

<div class="tab-pane" id="email-tab" style="margin-top: 15px">
    <div class="form-group">
        <label for="ServerUrl" class="col-lg-2 control-label">服务地址</label>
        <div class="col-lg-4">
            @Html.TextBoxFor(model => model.ServerUrl, new {@class = "form-control", placeholder = "服务地址" })
        </div>
    </div>
    <div class="form-group">
        <label for="Port" class="col-lg-2 control-label">服务端口</label>
        <div class="col-lg-4">
            @Html.TextBoxFor(model => model.Port, new {@class = "form-control", placeholder = "服务端口" })
        </div>
    </div>
    <div class="form-group">
        <label for="UserAccount" class="col-lg-2 control-label">邮箱账号</label>
        <div class="col-lg-4">
            @Html.TextBoxFor(model => model.UserAccount, new {@class = "form-control", placeholder = "邮箱账号" })
        </div>
    </div>
    <div class="form-group">
        <label for="Password" class="col-lg-2 control-label">邮箱密码</label>
        <div class="col-lg-4">
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "邮箱密码" })
        </div>
    </div>
</div>