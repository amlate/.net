<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 大连白洗么后台管理系统</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet" />
    <link href="~/Scripts/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/fileinput.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-multiselect.css" rel="stylesheet" />
    <link href="~/Content/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/Main.css" rel="stylesheet" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        Html.RenderAction("WrapperPartial", "Purview");
    }
    <div class="container-fluid">
        <div class="row">
            <!-- /.navbar-top-links -->
            @if (User.Identity.IsAuthenticated)
            {
                Html.RenderAction("NaviPartial", "Purview");
            }
            <div id="page-wrapper">
                <div id="center">
                    <div>
                        <ol class="breadcrumb">
                            <li><a href="@Url.Action("Index","Home")">首页</a></li>
                            <li><a href="#">@ViewBag.Top</a></li>
                            <li class="active">@ViewBag.Second</li>
                        </ol>
                    </div>
                    @RenderBody()
                </div>
            </div>
            <!-- /#page-wrapper -->
        </div>
    </div>

    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <link href="~/Scripts/select2/css/select2.css" rel="stylesheet" />
    <script src="~/Scripts/select2/js/select2.js"></script>
    <script src="~/Scripts/fileinput/fileinput.min.js"></script>
    <script src="~/Scripts/fileinput/locales/zh.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="~/Scripts/datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/Scripts/bootstrap-switch.min.js"></script>
    <script src="~/Scripts/jquery.mCustomScrollbar.min.js"></script>
    <script src="~/Scripts/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="~/Scripts/bootstrap-select/i18n/defaults-zh_CN.min.js"></script>
    <script src="~/Scripts/bootstrap-multiselect.js"></script>
    <script src="~/Scripts/bootstrapValidator.min.js"></script>
    <script src="~/Scripts/jquery.layout.min.js"></script>
    <script src="~/Scripts/layer/layer.js"></script>
    <script src="~/Scripts/metisMenu.min.js"></script>
    <link href="~/Scripts/summernote/summernote.css" rel="stylesheet" />
    <script src="~/Scripts/summernote/summernote.min.js"></script>
    <script src="~/Scripts/summernote/lang/summernote-zh-CN.min.js"></script>
    <script src="~/Scripts/bootstrap3-editable/js/bootstrap-editable.min.js"></script>
    <link href="~/Scripts/select2/select2-bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
