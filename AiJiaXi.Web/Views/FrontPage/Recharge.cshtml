    <div class="pay_money">
        <span class="fl">支付金额</span>
        <span id="chargeNumShow" class="fr">50元</span>
    </div>
    <p class="title"  style="display:none"><span>选择支付方式</span></p>
    <ul class="pay"  style="display:none">
        <li data-type="alipay"  style="display:none"><i class="icon l pay_zhifu"></i>支付宝支付<b class="sel"><i class="round"></i></b></li>
        <li data-type="wechat"><i class="icon l pay_weixin"></i>微信支付<b><i class="round"></i></b></li>
        <li style="display:none"><i class="icon l pay_other"></i>其他支付方式<i class="icon add"></i></li>
    </ul>
    <footer class="recharge">
        <div id="submit" class="btn gre2">立 即 支 付</div>
    </footer>
</section>
