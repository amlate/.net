@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
@using Project.Domain.Enums
@model Project.Domain.Entities.UserProfile.UserAccount
<script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
<script>

    store('countyId', '@ViewBag.countyId');//设置当前首页选中的区域ID
    store('pageName', 'recharge');
    var ajaxData = new Array();
</script>
<section class="recharge">
    <header class="reback"><span class="left back"><i class="icon back"></i>充值</span><i class="icon home"></i></header>
    <input id="payType" value="alipay" type="hidden">
    <input id="chargeNum" value="50" type="hidden">
    <input id="userid" value="@Model.Id" type="hidden">
    <input id="openid" value="@Model.ApplicationUser.OpenId" type="hidden">
    <div class="yue">
        <p style="display:none"><img src="images/chongzhi.png"></p>
        <div class="info"><b><i class="icon menu_yue"></i></b>我的账户余额<span>@Model.Balance 元</span></div>
    </div>
    <div class="selMoney">
        <span>充值</span><i class="icon lt"></i>
    </div>
    <p class="title"><span>我的余额使用记录</span></p>
    <ul class="usedRecord">
        @{
            foreach (var item in ViewBag.ConsumeList)
            {
                <li>
                    <i>@EnumExtensions.GetDescription(item.TradeType)</i> <i>@item.TradeMoney</i><br>
                    <i>@item.RiseTime</i>
                </li>
            }
        }
    </ul>
    <div class="clear" style="height:48px;"></div>
    <footer class="space">
        <div class="btn gre2 callTel"><i class="icon kefu"></i>联系客服</div>
    </footer>
</section>
<section class="recharge_choose">
