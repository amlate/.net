@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<Project.Domain.Entities.Orders.OrderItem>

@{
    ViewBag.Title = "产品管理";
    ViewBag.Top = "产品管理";
    ViewBag.Second = "产品列表";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <a class="btn btn-default btn-sm" href="@Url.Action("Manage", new { @ClassId = ViewBag.ClassId})" style="margin-left: 10px; margin-bottom: 10px">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> 新增
            </a>
        </div>
        <div class="pull-right" style="padding-right: 15px;">
            @using (Ajax.BeginForm("OrderItemSearchPost", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "datatable", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" }, { "class", "form-inline" } }))
            {
                <div class="form-group">
                    <label class="sr-only" for="name">名称</label>
                    <div class="input-group">
                        <div class="input-group-addon">名称</div>
                        <input type="text" class="form-control" id="name" name="name" placeholder="产品名称">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <span class="fa  fa-search" aria-hidden="true"></span> 搜索
                </button>
            }
        </div>
    </div>
    <div class="row" style="height: 5px;"></div>
</div>

<div id="datatable">
    @Html.Partial("_OrderItemSearchResult", Model)
</div>
@section scripts
{
    @{Html.RegisterMvcPagerScriptResource();}
}