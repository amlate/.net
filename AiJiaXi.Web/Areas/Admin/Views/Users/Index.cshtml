@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<AiJiaXi.Domain.Entities.IdentityModel.ApplicationUser>

@{
    ViewBag.Title = "会员管理";
    ViewBag.Top = "会员管理";
    ViewBag.Second = "会员列表";
}

<div class="container-fluid">
    <div class="row">
        <div class="pull-right" style="padding-right: 15px;">
            @using (Ajax.BeginForm("UsersSearchPost", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "datatable", InsertionMode = InsertionMode.Replace, OnComplete = "InitialEdit()" }, new RouteValueDictionary { { "id", "searchForm" }, { "class", "form-inline" } }))
            {

                <div class="form-group">
                    <label class="sr-only" for="orderNo">用户名</label>
                    <div class="input-group">
                        <div class="input-group-addon">用户名</div>
                        <input type="text" class="form-control" id="username" name="username" placeholder="=用户名">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">
                    <span class="fa  fa-search" aria-hidden="true"></span> 搜索
                </button>
            }
        </div>
    </div>
    <div class="row" style="height: 5px;"></div>
</div>
<div id="datatable">
    @Html.Partial("_UsersSearchResult", Model)
</div>
@section scripts
{
    @{Html.RegisterMvcPagerScriptResource();}
}
