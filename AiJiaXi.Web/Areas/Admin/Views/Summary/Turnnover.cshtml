@using Project.Domain.Enums
@model System.Collections.Generic.List<Project.Domain.ViewModels.Admin.SummaryViewModel>

@{
    ViewBag.Title = "业务统计";
    ViewBag.Title = "月营业额统计";
    ViewBag.Title = "月营业额统计";
}

<div class="container-fluid">
    <div class="row">
        <div class="pull-right" style="padding-right: 15px;">
            @using (Ajax.BeginForm("TurnnoverSearchPost", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "datatable", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" }, { "class", "form-inline" } }))
            {
                <div class="form-group">
                    <label class="sr-only" for="year">年份</label>
                    <select id="year" name="year" class="selectpicker show-tick form-control" data-live-search="true">
                        @for (int i = 2016; i <= DateTime.Now.Year; i++)
                        {
                            if (DateTime.Now.Year == i)
                            {
                                <option value="@i" selected="selected">@string.Format("{0}年", i)</option>
                            }
                            else
                            {
                                <option value="@i">@string.Format("{0}年", i)</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label class="sr-only" for="month">年份</label>
                    <select id="year" name="month" class="selectpicker show-tick form-control" data-live-search="true">
                        @for (int i = 1; i < 13; i++)
                        {
                            if (DateTime.Now.Month == i)
                            {
                                <option value="@i" selected="selected">@string.Format("{0}月", i)</option>
                            }
                            else
                            {
                                <option value="@i">@string.Format("{0}月", i)</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">
                    <span class="fa  fa-search" aria-hidden="true"></span> 搜索
                </button>
            }
        </div>
    </div>
    <div class="row" style="height: 5px;"></div>
</div>



<div class="container-fluid">
    <div class="row" id="datatable">
        @Html.Partial("_TurnoverPartial", Model)
    </div>
</div>
